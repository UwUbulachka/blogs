<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<h1>Comment</h1>

	<%= 'Без коментариев' if @article.comments.empty? %>
	<% @article.comments.each do |comment| %>
	<p><strong>Name:</strong> <%= current_user.username %> </p>
	<p> <%= comment.body %> </p>
	<hr>
	<%end%>


<p>
<%= form_for([@article, @article.comments.build]) do |f| %>

	  <p>
    <%= current_user.username %><br/>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>

  <p><%= f.submit %></p>

<% end %>
